<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_simple">

    <TextView
        android:id="@+id/textviewPaymentMethods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="401dp"
        android:layout_height="375dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewPaypal"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPaypal"
                            android:layout_width="170dp"
                            android:layout_height="122dp"
                            app:srcCompat="@drawable/paypal_logo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rbPaypal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PayPal"
                                android:textColor="#F23B5F"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textviewPaypalEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="#F23B5F"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="name@byte.co.za"
                                android:inputType="textPersonName" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewVisa"
                android:layout_width="match_parent"
                android:layout_height="247dp"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgVisa"
                            android:layout_width="170dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/visa_logo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rbVisa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Visa"
                                android:textColor="#F23B5F"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textviewCardNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Card Number"
                                android:textColor="#F23B5F"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtCardNum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Card Number"
                                android:inputType="textPersonName" />

                            <TextView
                                android:id="@+id/textviewCVVCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CVV Code"
                                android:textColor="#F23B5F"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtCVV"
                                android:layout_width="98dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="CVV"
                                android:inputType="textPersonName" />

                            <TextView
                                android:id="@+id/textviewExpirationDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Expiration Date"
                                android:textColor="#F23B5F"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtDate"
                                android:layout_width="99dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="YY MM"
                                android:inputType="date" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgCash"
                            android:layout_width="170dp"
                            android:layout_height="132dp"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/cash" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rbCash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cash"
                                android:textColor="#F23B5F"
                                android:textSize="30sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_rounded_corners"
        android:clickable="true"
        android:text="Confirm"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <CheckBox
        android:id="@+id/cbSave"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:text="Would you like us to save your payment details?"
        android:textColor="#F23B5F"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.04000002" />

</androidx.constraintlayout.widget.ConstraintLayout>